    </section>
    <section id="content">
        <div class="container">
            <div class="row">  
                 <div><h3>Update Cars</h3></div>          
                    <div class="col-md-8 text-center mb-3">  
                       
                        <form method="post" action="/cars/<%= id %>" enctype="multipart/form-data"> 
                        
                            <div class="row g-3 mt-1">
                                <div class="col-4">
                                    <label for="nama" class="col-form-label">Nama</label>
                                </div>
                                <div class="col-4">
                                    <input type="text" name="nama" class="form-control" value="<%= nama %>" >
                                </div>                                 
                            </div>
                            <div class="row g-3 mt-1">
                                <div class="col-4">
                                    <label for="sewa" class="col-form-label">Sewa Perhari</label>
                                </div>
                                <div class="col-4">
                                    <input type="number" name="sewa" class="form-control" value="<%=sewa%>" >
                                </div>                                 
                            </div> 
                                
                            <div class="row g-3 mt-1">
                                <div class="col-4">
                                    <label for="ukuran" class="col-form-label">Ukuran</label>
                                </div>
                                <div class="col-4">
                                    <select  class="form-select" name="ukuran">
                                            <option value="small">Small</option>
                                            <option value="medium">Medium</option>
                                            <option value="big">Big</option>
                                    </select>
                                </div>                                 
                            </div> 
                            <div class="row g-3 mt-1">
                                <div class="col-4">
                                    <label for="foto" class="col-form-label">Foto</label>
                                </div>
                                <div class="col-4">
                                    <input type="file" name="foto" class="form-control" >
                                </div>                                 
                            </div> 

                            <div class="row g-3 mt-3">
                                <div class="col-4">
                                    <button type="reset" class="btn btn-outline-primary btn-sm">Cancel</button>
                                    <button type="submit" class="btn btn-primary btn-sm">Save</button>                           
                                </div>
                               
                            </div> 
                             
                        </form>
                        
                    </div>                    
            </div>
        </div>
    </section>
</body>

</html> 